<?xml version="1.0" encoding="UTF-8"?>
<modification>
	<id>No Image Quick Fix</id>
	<version>1.0.0</version>
	<vqmver>2.1.6</vqmver>
	<author>Jay Gilford - jay@jaygilford.com</author>

	<file name="*/model/tool/image.php" error="skip">
		<operation>
			<search position="replace"><![CDATA[return;]]></search>
			<add><![CDATA[if(file_exists(DIR_IMAGE . 'no_image.jpg')) {
				$filename = 'no_image.jpg';
			} else {
				$filename = 'no_image.png';
			}]]></add>
		</operation>
	</file>
</modification>